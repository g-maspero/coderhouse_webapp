<h2>Product List</h2>
{{#if listExists}}
    <table class="table table-striped table-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Thumbnail</th>
        </tr>
        {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td><img src={{this.thumbnail}}></td>
            </tr>
        {{/each}}    
    </table>
{{else}}
    <h3>No products added yet!</h3>
{{/if}}
<div id="add_new_button">
    <button type="button" class="btn btn-dark" onclick="onAddProductClick()">Add new product!</button>
</div>